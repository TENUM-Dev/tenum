{
  "name": "@tenum_dev/tenum",
  "version": "1.0.0",
  "description": "Tenum Lua - Lua 5.4.8 interpreter implemented in Kotlin Multiplatform",
  "main": "dist/tenum-cli.js",
  "types": "dist/tenum-cli.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TENUM-Dev/tenum.git",
    "directory": "clinpm"
  },
  "bin": {
    "tenum": "dist/tenum.js",
    "tlua": "dist/lua.js",
    "tluac": "dist/luac.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "npx esbuild ../cli/build/compileSync/js/main/productionLibrary/kotlin/tenum-cli.js --bundle --minify --platform=node --outdir=./src --external:ws --external:@js-joda/core",
    "install:copy": "cpy ./src/tenum-cli.js ./dist --flat",
    "install:copy2": "cpy ./../cli/build/compileSync/js/main/productionLibrary/kotlin/tenum-cli.d.ts ./src --flat",
    "install:copy3": "cpy ./../cli/build/compileSync/js/main/productionLibrary/kotlin/tenum-cli.d.ts ./dist --flat",
    "install:global": "npm install -g --force .",
    "build:bundle:install": "npm run build:bundle && npm run install:copy && npm run install:copy2 && npm run install:copy3 && npm run build && npm run install:global"
  },
  "keywords": [
    "lua",
    "interpreter",
    "lua5.4",
    "cli"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "files": [
    "index.js",
    "dist/**/*",
    "README.md",
    "../LICENSE.md"
  ],
  "dependencies": {
    "@js-joda/core": "5.7.0",
    "@js-joda/timezone": "2.23.0"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "typescript": "5.9.3",
    "cpy-cli": "7.0.0",
    "esbuild": "0.27.3"
  }
}

